{
  "data_type": "image",
  "model_type": "image_classifier",
  "backbone": "resnet18",
  "pretrained": true,
  "freeze_backbone": true,
  "classifier_hidden_dims": [256, 128],
  "batch_size": 32,
  "learning_rate": 0.001,
  "num_epochs": 50,
  "optimizer_config": {
    "optimizer_type": "adam",
    "learning_rate": 0.001,
    "weight_decay": 0.0001
  },
  "scheduler_config": {
    "scheduler_type": "step",
    "step_size": 20,
    "gamma": 0.1
  },
  "early_stopping": {
    "patience": 10,
    "min_delta": 0.001,
    "restore_best_weights": true
  },
  "train_ratio": 0.7,
  "val_ratio": 0.15,
  "test_ratio": 0.15,
  "num_workers": 4,
  "task_type": "classification"
} 