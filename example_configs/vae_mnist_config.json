{
  "data_type": "image",
  "data_path": "./data/mnist_like", 
  "output_dir": "./outputs/vae_mnist",
  "model_type": "vae",
  "task_type": "reconstruction", 
  "input_dim": 784, 
  "image_dims": [1, 28, 28],
  "encoder_hidden_dims": [512, 256],
  "latent_dim": 20,
  "decoder_hidden_dims": [256, 512],
  "vae_beta": 1.0,
  "batch_size": 128,
  "num_epochs": 50,
  "learning_rate": 0.001,
  "optimizer_config": {
    "optimizer_type": "adam",
    "learning_rate": 0.001,
    "weight_decay": 1e-5
  },
  "scheduler_config": {
    "scheduler_type": "step",
    "step_size": 10,
    "gamma": 0.5
  },
  "early_stopping_config": {
    "patience": 10,
    "min_delta": 0.0001
  },
  "num_workers": 4,
  "train_ratio": 0.8,
  "val_ratio": 0.2,
  "test_ratio": 0.0
} 